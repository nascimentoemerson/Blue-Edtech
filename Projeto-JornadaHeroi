let soma = 0;

console.log();

if (q1 == "sim") {
   soma += 1;
 }
 if (q2 == "sim") {
   soma += 1;
 }
 if (q3 == "sim") {
   soma += 1;
 }
 if (q4 == "sim") {
   soma += 1;
 }
 if (q5 == "sim") {
   soma += 1;
 }
 
 if (soma == 5){
    console.log("PARABÉNS VOCÊ CONSEGUIU CONSQUISTAR O ANÚNCIO 'PADRÃO FIFA'");
 }else if (soma == 4){
    console.log("VOCÊ ESTÁ QUASE LÁ AMIGO, MAS AINDA FALTA UM PASSO PARA O ANÚNCIO ESTAR DENTRO DO 'PADRAO FIFA''");
 }else if (soma ==3){
    console.log("VOCÊ ESTÁ PERTO, MAS AINDA PRECISA REALIZAR TODOS OS PASSOS!'");
 }else if (soma == 1 || soma == 2){
    console.log("VOCÊ FALHOU, VOCÊ NÃO APLICOU TODOS OS PASSOS ");
 }else {
    console.log("VOCÊ FALHOU, VOCÊ NÃO CONSEGUIU COMPLETAR A MISSÃO!");
 }

 
