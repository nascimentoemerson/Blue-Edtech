// Perguntas 

let q1 = prompt("Você criou imagem com fundo branco e tamanho 1200x1200? Sim ou Não: ").toLowerCase();
console.clear();
while (q1 != "sim" && q1 != "nao") {
    console.log("Por favor, responda com SIM ou NAO!");
    q1 = prompt("Você criou imagem com fundo branco e tamanho 1200x1200? Sim ou Não: ").toLowerCase();
    console.clear();
}

